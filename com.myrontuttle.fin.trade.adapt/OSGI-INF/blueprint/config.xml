<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">
    
	<reference id="ScreenerService" interface="com.myrontuttle.fin.trade.api.ScreenerService" />
	<reference id="WatchlistService" interface="com.myrontuttle.fin.trade.api.WatchlistService" />
	<reference id="AlertService" interface="com.myrontuttle.fin.trade.api.AlertService" />
	<reference id="PortfolioService" interface="com.myrontuttle.fin.trade.api.PortfolioService" />
	<reference id="TradeStrategy" interface="com.myrontuttle.fin.trade.api.TradeStrategy" />
	<reference id="AlertReceiverService" interface="com.myrontuttle.fin.trade.api.AlertReceiverService" />
	
	<bean id="TraderExpression" class="com.myrontuttle.adaptivetrader.TraderExpression">
		<argument ref="ScreenerService" />
		<argument ref="WatchlistService" />
		<argument ref="AlertService" />
		<argument ref="PortfolioService" />
		<argument ref="TradeStrategy" />
		<argument ref="AlertReceiverService" />
	</bean>
	
	<bean id="StrategyEvaluator" class="com.myrontuttle.adaptivetrader.StrategyEvaluator">
		<argument ref="PortfolioService" />
	</bean>
	
	<bean id="Research" class="com.myrontuttle.adaptivetrader.Research">
		<argument ref="TraderExpression" />
		<argument ref="StrategyEvaluator" />
	</bean>
	
</blueprint>